<%= form_tag(:controller => 'user_sessions', :action => 'create') do %>
    <% if @user_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this login:</h2>

          <ul>
          <% @user_session.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
    <% end %>
    <ol class="formList">
      <li>
        <%= label_tag :username %>
        <%= text_field_tag 'user_session[username]' %>
      </li>
      <li>
        <%= label_tag :password %>
        <%= password_field_tag 'user_session[password]' %>
      </li>
      <li>
        <%= submit_tag "Submit" %>
      </li>
    </ol>  
<% end %>